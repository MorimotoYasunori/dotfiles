"----------
" 基本的な設定
"----------
set showtabline=2
set guioptions-=T
set antialias
set tabstop=2
set number
set nobackup
set visualbell t_vb=
set nowrapscan

"Color Scheme
syntax enable
set background=light
colorscheme solarized 

if has('mac')
        set transparency=05         " opacity
        set guifont=Ricyt:h16"      "font
        set columns=120             " width
        set lines=50                " line
endif

if has('win64')
        set transparency=0         " opacity
        set guifont=Ricyt:h16"      "font
        set columns=120             " width
        set lines=50                " line
endif

set mouse=                          " マウス操作を無効に
set nomousefocus                    " マウス移動によるフォーカス切り替えを無効に

