"----------
" 基本的な設定
"----------
set showtabline=2
set guioptions-=T
set antialias
set tabstop=2
set number
set nobackup
set visualbell t_vb=
set nowrapscan

"Color Scheme
syntax enable
set background=dark
colorscheme solarized 

if has('mac')
        set transparency=05         " opacity
        set guifont=Ricty:h16       " font
        set columns=120             " width
        set lines=50                " line
endif

if has('win64')
        set transparency=0          " opacity
        set guifont=Ricty:h14       " font
        set columns=100             " width
        set lines=40                " line
endif

if has('gui_gtk2')
  set guifont=Ricty\ 15             " font
  set columns=120                   " width
  set lines=45                      " line
endif

set mouse=                          " マウス操作を無効に
set nomousefocus                    " マウス移動によるフォーカス切り替えを無効に

