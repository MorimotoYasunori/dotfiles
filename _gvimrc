"----------
" 基本的な設定
"----------
set showtabline=2
set guioptions-=T
set antialias
set tabstop=2
set number
set nobackup
set visualbell t_vb=
set nowrapscan
set guioptions+=a

"Color Scheme
syntax enable
set background=dark
"colorscheme gruvbox
colorscheme japanesque

if has('mac')
        set transparency=00           " opacity
        set guifont=Ricty:h16         " font
        set columns=120               " width
        set lines=50                  " line
endif

if has('win64')
        set transparency=05           " opacity
        set guifont=Ricty:h13.5       " font
        set columns=100               " width
        set lines=40                  " line
endif

if has('gui_gtk2')
  set guifont=Ricty\ 13.5             " font
  set columns=120                     " width
  set lines=50                        " line
endif

set mouse=                            " マウス操作を無効に
set nomousefocus                      " マウス移動によるフォーカス切り替えを無効に 

" MacVimでCtrl-Vが矩形モードではなくペーストになってしまう問題を回避。
nnoremap <C-V> <C-V> 
